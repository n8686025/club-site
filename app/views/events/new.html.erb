<% provide(:title, "Make new event") %>
<h1>Create new event</h1>

<div class="row">
	<%= form_for(@event) do |f| %>
		<%= render 'shared/event_error_messages' %>
		<%= f.label :name %> 
		<!-- form control is a bootstrap class --> 
		<%= f.text_field :name, class: 'form-control' %> 

		<%= f.submit "Upload event", class: "btn btn-primary" %>
	<% end %>
</div>